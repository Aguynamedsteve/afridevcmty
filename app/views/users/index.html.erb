<div class="row">
  <div class="medium-12 columns">
    <h1>Listing users</h1>

    <ul>
      <% @users.each do |user| %>
      <li class="slot">
        <div class="inner-slot">
          <ul>
            <li><%= user.login %></li>
            <li><%= user.avatar_url %></li>
            <li><%= user.url %></li>
            <li><%= user.html_url %></li>

            <li><%= link_to 'Show', user %></li>
            <li><%= link_to 'Edit', edit_user_path(user) %></li>
            <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </li>
      <% end %>
    </ul>
    <ul class="pagination"><%= paginate @users %></ul>
  </div>
</div>