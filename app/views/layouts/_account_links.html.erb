<% if !user_signed_in? %>
  <li class="<%= 'active' if params[:controller] == 'devise/sessions' %>"><%= link_to "Sign in", new_user_session_path %></li>
  <li class="<%= 'active' if params[:controller] == 'devise/registrations' %>"><%= link_to "Sign up", new_user_registration_path %></li>
<% else %>
  <li class="<%= 'active' if params[:controller] == 'devise/registrations' %>"><%= link_to "Edit your account", edit_user_registration_path %></li>
  <li><%= link_to "Sign out", destroy_user_session_path, data:{method: :delete} %></li>
<% end %>